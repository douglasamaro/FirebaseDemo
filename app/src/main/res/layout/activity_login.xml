<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Login">
    <LinearLayout
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/principal"
        android:elevation="4dp"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FirebaseDemo"
            android:layout_margin="17dp"
            android:textColor="@color/base"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="25dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/detalhe"
            android:layout_marginBottom="30dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="@color/detalhe"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="meuemail@email.com"
            android:background="@drawable/back_input"
            android:textColor="@color/detalhe"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:textSize="14sp"
            android:textColor="@color/detalhe"
            android:layout_marginTop="25dp"
            />
        <EditText
            android:id="@+id/tv_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="12dp"
            android:hint="********"
            android:textColor="@color/detalhe"
            android:background="@drawable/back_input"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_navegacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nÃ£o tem conta? dastre-se"
            android:textColor="@color/detalhe"
            android:layout_marginTop="25dp"
            android:textAlignment="textEnd"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/tv_entrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:textSize="14sp"
            android:layout_marginTop="25dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>